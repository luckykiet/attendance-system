{
  "expo": {
    "name": "Attendance System",
    "slug": "mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "cz.ethereal.gowork",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR Codes for registration or for making attendance.",
        "NSLocalNetworkUsageDescription": "This app needs access to local network to communicate with the authenticated local attendance server."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "cz.ethereal.gowork",
      "permissions": [
        "CAMERA"
      ],
      "versionCode": 636,
      "softwareKeyboardLayoutMode": "pan"
    },
    "plugins": [
      "expo-router",
      "expo-localization"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}